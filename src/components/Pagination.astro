---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="mt-auto mb-8 flex justify-center items-center gap-4" aria-label="Pagination">
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        class:list={["px-6 py-3 border-4 border-foreground bg-accent hover:bg-foreground hover:text-background text-foreground font-bold uppercase text-sm tracking-wider transition-all duration-100 hover:translate-x-1 hover:translate-y-1 select-none", { "opacity-30 pointer-events-none": !page.url.prev }]}
        ariaLabel="Previous"
      >
        <IconArrowLeft class="inline-block rtl:rotate-180 w-4 h-4" />
        Prev
      </LinkButton>
      <span class="font-black uppercase text-xl">{page.currentPage} / {page.lastPage}</span>
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        class:list={["px-6 py-3 border-4 border-foreground bg-accent hover:bg-foreground hover:text-background text-foreground font-bold uppercase text-sm tracking-wider transition-all duration-100 hover:translate-x-1 hover:translate-y-1 select-none", { "opacity-30 pointer-events-none": !page.url.next }]}
        ariaLabel="Next"
      >
        Next
        <IconArrowRight class="inline-block rtl:rotate-180 w-4 h-4" />
      </LinkButton>
    </nav>
  )
}
