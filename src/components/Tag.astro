---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block",
    size === "sm" ? "m-1" : "m-2",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "inline-flex items-center gap-1 px-4 py-2 border-4 border-foreground bg-card-bg text-foreground hover:bg-accent hover:border-accent hover:text-background font-bold uppercase tracking-wider transition-all duration-100 hover:translate-x-1 hover:translate-y-1",
      { "text-xs px-3 py-1 border-2": size === "sm" },
      { "text-sm px-6 py-3": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "inline-block",
        { "size-3": size === "sm" },
        { "size-5": size === "lg" },
      ]}
    />
    <span>{tagName}</span>
  </a>
</li>
