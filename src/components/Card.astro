---
import { slugifyStr } from "@/utils/slugify";
import type { CollectionEntry } from "astro:content";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

export interface Props extends CollectionEntry<"blog"> {
  variant?: "h2" | "h3";
}

const { variant = "h2", data, id, filePath } = Astro.props;

const { title, description, pubDatetime, modDatetime, timezone } = data;
---

<li class="card-fancy">
  <div class="card-glow-effect"></div>
  <div class="card-content">
    <a href={getPath(id, filePath)} class="card-title-link">
      {variant === "h2" ? (
        <h2 class="card-title">{title}</h2>
      ) : (
        <h3 class="card-title">{title}</h3>
      )}
    </a>

    <Datetime {pubDatetime} {modDatetime} {timezone} class="card-date" />

    <p class="card-description">{description}</p>

    <div class="card-corner-accent"></div>
  </div>
</li>

<style>
  .card-fancy {
    position: relative;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-glow-effect {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 0;
  }

  .card-fancy:hover .card-glow-effect {
    opacity: 0.1;
  }

  .card-content {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .card-fancy:hover .card-content {
    transform: translateY(-4px);
    border-color: var(--accent);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .card-title-link {
    text-decoration: none;
    margin-bottom: 0.5rem;
    display: inline-block;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--foreground);
    transition: all 0.2s ease;
    margin: 0;
  }

  .card-fancy:hover .card-title {
    color: var(--accent);
    transform: translateX(4px);
  }

  .card-date {
    font-size: 0.75rem;
    opacity: 0.7;
    margin-bottom: 0.75rem;
  }

  .card-description {
    flex-grow: 1;
    font-size: 0.875rem;
    color: var(--foreground-muted);
    line-height: 1.6;
  }

  .card-corner-accent {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, transparent 50%, var(--accent) 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card-fancy:hover .card-corner-accent {
    opacity: 0.15;
  }
</style>
