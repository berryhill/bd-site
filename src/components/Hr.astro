---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class="hr-wrapper" class:list={{ "no-padding": noPadding }}>
  <hr aria-hidden={ariaHidden} />
</div>

<style>
  .hr-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hr-wrapper.no-padding {
    padding: 0;
  }

  hr {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 4rem 0;
  }
</style>
