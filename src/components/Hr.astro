---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div style={noPadding ? "max-width: 1200px; margin: 20px auto; padding: 0;" : "max-width: 1200px; margin: 20px auto; padding: 0 16px;"}>
  <hr style="border: none; border-top: 2px solid var(--border); margin: 0;" aria-hidden={ariaHidden} />
</div>
