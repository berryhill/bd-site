    margin: 2rem 0;
    padding: 1.5rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border: 2px solid var(--accent);
  }

  .paradigm-shift h5 {
    margin-top: 0;
  }

  .workflow-old, .workflow-new {
    background-color: var(--bg-tertiary);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.8;
    margin: 0.75rem 0;
  }

  .workflow-old {
    border-left: 3px solid #ef4444;
  }

  .workflow-new {
    border-left: 3px solid #10b981;
  }

  .example-box {
    margin-top: 1rem;
    padding: 1rem;
    background-color: var(--bg-tertiary);
    border-radius: 4px;
    border-left: 3px solid var(--accent);
  }

  .example-box ol {
    margin-left: 1.5rem;
    margin-top: 0.5rem;
  }

  .example-box li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

