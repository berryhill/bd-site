  }

  .problem-section {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border-left: 4px solid #ef4444;
  }

  .problem-section h5 {
    margin-top: 0;
    margin-bottom: 0.75rem;
  }

  .problem-section ul {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-top: 0.5rem;
  }

  .problem-section li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: var(--fg-secondary);
  }

