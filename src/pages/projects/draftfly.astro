    margin-left: 0;
  }

  .old-paradigm li, .new-paradigm li {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
    line-height: 1.6;
  }

  .impact-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border-left: 4px solid var(--accent);
  }

  .impact-section h5 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .impact-section ul {
    list-style-type: disc;
    margin-left: 1.5rem;
  }

  .impact-section li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: var(--fg-secondary);
  }

  .bottom-line {
    margin: 2rem 0;
    padding: 2rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border: 2px solid var(--accent);
  }

  .bottom-line > p {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .video-container {
      padding: 1rem;
    }

    .video-info h2 {
      font-size: 1.5rem;
    }

    .video-info h3 {
      font-size: 1.25rem;
    }

    .video-info h4 {
      font-size: 1.125rem;
    }

    .video-info h5 {
      font-size: 1rem;
    }

    .video-info p {
      font-size: 1rem;
    }

    .feature {
      padding: 1rem;
    }

    .workflow-diagram {
      font-size: 0.75rem;
      padding: 1rem;
    }

    .paradigm-comparison {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .problem-section, .impact-section {
      padding: 1rem;
    }

    .bottom-line {
      padding: 1rem;
    }
  }
</style>
